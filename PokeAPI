    get:
      tags:
        - pokemon
      summary: Encuentra pokemon por nombre o ID
      description: Obtiene la informacion de un pokemon
      operationId: getPokemon
      parameters:
        - name: parameter
          example: pikachu
          in: path
          description: Nombre o ID del pokemon a buscar
          required: true
          schema:
            maxLength: 10
            pattern: '^[a-zA-Z0-9]*$'
            type: string
      responses:
        '200':
          description: Successful operation
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/ApiResponse'
              example:
                code: 200
                type: "success"
                message: "Pokemon found"
        '400': 
          description: Invalid ID or Name supplied
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/ApiResponse'
              example:
                code: 400
                type: "error"
                message: "Invalid ID or Name supplied"
        '404':
          description: Pokemon not found
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/ApiResponse'
              example:
                code: 404
                type: "error"
                message: "Pokemon not found"
        '406':
          description: Invalid input
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/ApiResponse'
              example:
                code: 406
                type: "error"
                message: "Invalid input"
        '429':
          description: Too many requests
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/ApiResponse'
              example:
                code: 429
                type: "error"
                message: "Too many requests"
        '500':
          description: Internal server error
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/ApiResponse'
              example:
                code: 500
                type: "error"
                message: "Internal server error"
